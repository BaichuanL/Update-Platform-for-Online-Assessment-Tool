<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <link href="https://cdn.bootcdn.net/ajax/libs/font-awesome/6.1.1/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="css/login.css">
</head>
<body>
<%- include('../partials/loader') %>
<section class="main-section">
    <a href="/" class="back">Home</i></a>
    <img  class="logo" src="css/img/logo.png" alt="peerless" width="300px">
    <div class="container" id="container">
        <div class="form-container sign-in-container">
            <form action="/authenticate" method="post" id="eventForm">
                <h1>Sign in</h1>
                <div class="social-container">
                    <a href="#" class="social"><i class="fa-brands fa-google"></i></a>
                    <a href="#" class="social"><i class="fa-brands fa-facebook"></i></a>
                    <a href="#" class="social"><i class="fa-brands fa-twitter"></i></a>
                </div>
                <span>Please choose the above method to log in or use your account</span>
                <input type="text" name="userName" placeholder="User Name">
                <input type="password" name="password" placeholder="Password">
                <button onclick="onSubmit()">Sign in</button>
                <div class="error-txt mt-1"><%= error %></div>
            </form>
        </div>
    </div>
    <script src="main.js"></script>
    <script>
        function onSubmit() {
            showLoader();
            localStorage.clear();
            const myTimeout = setTimeout(hideLoader, 3000);
            function myStopFunction() {
                clearTimeout(myTimeout);
            }
        }
    </script>
</section>
</body>

</html>